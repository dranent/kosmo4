<mapper namespace="com.biz.mapper.CategoryMapper">
	 <resultMap id="categoryMap" type="com.biz.vo.CategoryVO">
		<id property="cateseq" column="cateseq" />
		<result property="interestgroup" column="interestgroup" />
		<result property="category" column="category" />
		<collection property="interests" resultMap="interestMap"></collection>
	</resultMap>
	
	<resultMap id="interestMap" type="com.biz.vo.InterestVO">
		<id property="iseq" column="iseq" />
		<result property="interestgroup" column="interestgroup" />
		<result property="interest" column="interest" />
	</resultMap>
	
 	<select id="getCategory" resultMap="categoryMap">
 		select i.iseq as iseq, c.cateseq as cateseq,c.category as category, i.interest as interest from category c, interest i
		where c.interestgroup=i.interestgroup 
 	</select>
 	
 	
